<div class = "container">
	<div class = "row">
		<div class = "col-md-2">
			<%=link_to posts_path do%>
				<%=image_tag "All.svg", :size => "100x100"%>
				<br>
				<p class ="religion-name">All</p>
			<%end%>
		</div>

		<%@religions.each do |religion|%>
		<div class = "col-md-2">
			<%=link_to posts_path(:religion_id => religion.id ) do %> 
				<%=image_tag religion.name+".svg", :size => "100x100"%>
				<br>
			<p class ="religion-name"><%=religion.name%></p>
		
		<%end%>
		</div>	
	<%end%>
	</div>
</div>
