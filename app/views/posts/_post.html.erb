<div class ="post-box jumbotron">


<div class="page-header">
  <h3 class ="post-title"><%= post.title %></h3>
</div>
<%= raw post.body%>
<hr class ="divider">

<%=link_to "Read more", post, :class => "btn, btn-primary btn-lg pull-right"%>
<%=link_to vote_post_path(post, :direction => "like"), remote: true, :data =>{:text => 'Hello'}, class: "vote" do%>
<i class="fa fa-thumbs-up pull-right">
<%= post.get_likes.size %>
</i> 
<%end%>
<%=link_to vote_post_path(post, :direction => "dislike"), remote: true, :data =>{:text => 'Hello'}, class: "vote" do%>
<i class="fa fa-thumbs-down pull-right">
	<%= post.get_dislikes.size %>
</i> <%end%>
<%=link_to "#" do%><i class="fa fa-comment pull-right">13</i> <%end%>

</div>




