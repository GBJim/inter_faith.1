<%- model_class = Post -%>
<div class="page-header ">
  <h1>interFaith</h1>
</div>
<h2 class ="text-center" >Let's Talk About Religions</h2>
<%=link_to "All", posts_path%>
<%@religions.each do |religion|%>
<%=link_to religion.name, posts_path(:religion_id => religion.id )%>
<%end%>











<div id="modal" class="popupContainer"  style="display:none;">
    <header class="popupHeader">
        <span class="header_title">Login</span>
        <span class="modal_close"><i class="fa fa-times"></i></span>
    </header>
 
    <section class="popupBody">
   
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
                                                                                                                                        
  
  <div class="form-group">
    <%= f.label :email, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"} %>
    </div>
  </div>
  

  <div class="form-group">
    <%= f.label :password, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.password_field :password, class: "text-field form-control", html: {autocomplete: "off"} %>
    </div>
  </div>
                                                                                                                                        
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.label :remember_me, "Remember Me", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.check_box :remember_me %>
      </div>
    </div>
  <% end -%>
                                                                                                                                        
  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%= f.submit "Login", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>

    </section>
</div>






<div data-no-turbolink>
<%= link_to t('.new', :default => t("helpers.links.new")), new_post_path, :class => 'btn btn-primary'  %>
</div>
<div id = "masonry-container" class="transitions-enabled infinite-scroll clearfix"   data-masonry-options='{ "columnWidth": 200, "itemSelector": ".box" }'>
  <%= render @posts%>
</div>
<div id="infinite-scrolling">
  <%#= will_paginate %>
</div>
