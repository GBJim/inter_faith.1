<%= form_for @post, :html => { :class => 'form-horizontal form-model' } do |f| %>
<div class = "container post-form">
 
 <div class = "form-group">
       <%= f.label :religions, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
        <%= f.collection_check_boxes :religion_ids, Religion.all, :id, :name%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :body, :class => 'text-field form-control ckeditor' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :image, :class => 'text-field form-control' %>
    </div>

  </div>
   <div class="form-group">
    <%= f.label :tag_list, "Tags (separated by commas)", :class => 'control-label col-md-2' %><br />
      <div class="col-md-10">
     <%= f.text_field :tag_list, :class => 'text-field form-control' %>
  </div>
  </div>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  posts_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
</div>